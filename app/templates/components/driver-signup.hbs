{{#if addNewDriver}}
    <div class="driver-signup">
        <div class="driver-sign">
            <br><center><h1>- New Driver -</h1></center>
            <form>
                <div class="form-group">
                    <label for="name">Name:</label><br>
                    {{input value=name id="name"}}
                </div>

                <div class="form-group">
                    <label for="residence">Residence:</label><br>
                    {{input value=residence id="residence"}}
                </div>

                <div class="form-group">
                    <label for="route">Route:</label><br>
                    {{input value=route id="route"}}
                </div>

                <div class="form-group">
                    <label for="time">Time:</label><br>
                    {{input value=time id="time"}}
                </div>

                <div class="form-group">
                    <label for="car">Car:</label><br>
                    {{input value=car id="car"}}
                </div>

                <div class="form-group">
                    <label for="registration">Registration:</label><br>
                    {{input value=registration id="registration"}}
                </div>

                <div class="form-group">
                    <label for="space">Space:</label><br>
                    {{input value=space id="space"}}
                </div>

                <center><button class="driver-button2"{{action 'saveDriver'}}>Save</button></center>
            </form>
        </div>
    </div>
{{else}}
    <button class="driver-button" {{action 'driverFormShow'}}>Sign Up As A Driver</button>
{{/if}}